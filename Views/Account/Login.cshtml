@model AccountLoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FastLearn</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Welcome back to FastLearn, we are glad to have you back with us. This is a learning platform that provide learners with 100% information needed to rule their world. We are glad you have decided to trust us walk you down this process." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/acc/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/acc/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/acc/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/acc/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <a href="index.html">
                                    <span><img src="~/acc/assets/images/logo.png" alt="" height="22"></span>
                                </a>
                                <p class="text-muted mb-4 mt-3">Enter your email address and password to access your dasboard.</p>
                            </div>

                            <form asp-action="login" asp-controller="account" method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="form-group mb-3">
                                    <label asp-for="Email">Email address</label>
                                    <input class="form-control" asp-for="Email" placeholder="Enter your email">
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="password">Password</label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter your password">
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                        <label class="custom-control-label" for="checkbox-signin" asp-for="RememberMe">Remember me</label>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted"> <a asp-action="password-r" asp-controller="account">Forgot your password?</a></p>
                            <p class="text-muted">Don't have an account? <a asp-action="register" asp-controller="account" class="text-dark ml-1"><b>Sign Up</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- App js -->
    <script src="~/acc/js/vendor.min.js"></script>
    <script src="~/acc/js/app.min.js"></script>

</body>
</html>