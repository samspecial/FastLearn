
@model AdminIndexViewModel
@{
    ViewData["Title"] = "Administrator";
}

<div>
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Admin Page</h2>
                    <p class="pageheader-text">This page deals with the administration of this webpage.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Admin</a></li>
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Create Admin</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <a asp-action="addadmin" asp-controller="administrator" class="btn btn-info text-white">ADD ADMIN</a>
            </div>
        </div>
        <div class="row">
            <h4>Post a message</h4>
            <form asp-action="postmessage" method="post">
                <textarea name="message" value="@ViewData["messageBody"]">Your message goes here</textarea>
                <button class="btn btn-outline-success">Post Message</button>
            </form>
        </div>
        <div class="row">
            <!-- ============================================================== -->
            <!-- basic table  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">REGISTER ADMINISTRATOR</h5>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Phone Number</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Admins.Any())
                                    {
                                        var count = 0;
                                        foreach (var admin in Model.Admins)
                                        {
                                            <tr>
                                                <td><p>@(++count)</p></td>
                                                <td><p>@admin.FullName</p></td>
                                                <td><p>@admin.Email</p></td>
                                                <td><p>@admin.Address</p></td>
                                                <td><p>@admin.PhoneNumber</p></td>
                                                <td><span><a class="btn btn-block btn-info text-white" asp-controller="administrator" asp-action="getsingleadmin" asp-route-id="@admin.Id">View More</a><a class="btn btn-block btn-primary text-white" asp-controller="administrator" asp-action="editadmin" asp-route-id="@admin.Id">Edit</a><a class="btn btn-block btn-danger text-white" asp-controller="administrator" asp-action="delete" asp-route-id="@admin.Id">Delete</a></span></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr colspan="3"><td><p>The database record is currently too d</p></td></tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
