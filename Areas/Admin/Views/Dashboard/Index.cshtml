@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <form asp-action="index" method="get">
                <div class="form-row">
                    
                    <div class="search-box col-md-6">
                        <input name="searchWord" value="@ViewData["searchBy"]" class="form-control" placeholder="Search using Name">
                        <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>

<table class="table table-striped table-bordered first">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Full Name</th>
            <th>Email</th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            var count = 0;
            foreach (var user in Model)
            {
                <tr>
                    <td><p>@(++count)</p></td>
                    <td><p>@user.FullName</p></td>
                    <td><p>@user.Email</p></td>
                    
                    <td>
                        <div class="btn-group dropdown">
                            <a href="javascript: void(0);" class="dropdown-toggle arrow-none btn btn-light btn-sm" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-horizontal"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-controller="faculty" asp-action="editfaculty" asp-route-id="@user.Id"><i class="mdi mdi-pencil mr-1 text-muted"></i>Edit</a>
                                <a class="dropdown-item" asp-controller="faculty" asp-action="delete" asp-route-id="@user.Id"><i class="mdi mdi-delete mr-1 text-muted"></i>Delete</a>
                                <a class="dropdown-item" asp-controller="faculty" asp-action="managefaculty" asp-route-id="@user.Id"><i class="mdi mdi-email mr-1 text-muted"></i>View Post</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr colspan="3"><td><p>Users record is currently empty</p></td></tr>
        }

    </tbody>

</table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>

