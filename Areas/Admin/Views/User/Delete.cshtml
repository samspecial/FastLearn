@model UserDeleteViewModel

@{ 
    ViewData["Title"] = "Delete User";
} 

<div class="container">
    This page fetches the delete form.
    <form method="post" asp-action="delete" asp-controller="user">
        <div class="form-group">
            <input type="hidden" autofocus asp-for="Id" />
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-danger btn-block waves-effect waves-light">Remove User</button>
        </div>


    </form>
</div>